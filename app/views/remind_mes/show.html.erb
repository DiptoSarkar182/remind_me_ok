<section class="max-w-2xl mx-auto bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-300 p-6 sm:p-8">
  <header>
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">Email Reminder</h1>
  </header>

  <main class="mt-6">
    <p class="text-lg text-gray-700 dark:text-gray-200">
      Below are the details of your scheduled email reminder:
    </p>

    <hr class="my-6 border-gray-200 dark:border-gray-700">

    <div class="space-y-4">
      <div class="flex flex-col sm:flex-row sm:items-center">
        <span class="w-24 font-semibold text-gray-700 dark:text-gray-300">From:</span>
        <span class="text-gray-600 dark:text-gray-400"><%= default_email_from %></span>
      </div>
      <div class="flex flex-col sm:flex-row sm:items-center">
        <span class="w-24 font-semibold text-gray-700 dark:text-gray-300">To:</span>
        <span class="text-gray-600 dark:text-gray-400"><%= @remind_me.user.email %></span>
      </div>
      <div class="flex flex-col sm:flex-row sm:items-center">
        <span class="w-24 font-semibold text-gray-700 dark:text-gray-300">Subject:</span>
        <span class="text-gray-600 dark:text-gray-400"><%= @remind_me.subject %></span>
      </div>
      <div class="flex flex-col sm:flex-row sm:items-center">
        <span class="w-24 font-semibold text-gray-700 dark:text-gray-300">Date:</span>
        <% time_zone = @remind_me.remind_me_time_zone %>
        <% remind_me_date_time_in_zone = @remind_me.remind_me_date_time.in_time_zone(time_zone) %>
        <% formatted_remind_me_date_time = remind_me_date_time_in_zone.strftime("%A, %b %d, %Y, %I:%M %p") %>
        <span class="text-gray-600 dark:text-gray-400"><%= formatted_remind_me_date_time %></span>
      </div>
      <div class="flex flex-col sm:flex-row sm:items-center">
        <span class="w-24 font-semibold text-gray-700 dark:text-gray-300">Timezone:</span>
        <span class="text-gray-600 dark:text-gray-400"><%= @remind_me.remind_me_time_zone %></span>
      </div>
      <div class="flex flex-col">
        <span class="w-24 font-semibold text-gray-700 dark:text-gray-300">Content:</span>
        <p class="mt-2 text-gray-600 dark:text-gray-400 whitespace-pre-wrap"><%= @remind_me.content %></p>
      </div>
    </div>

    <hr class="my-6 border-gray-200 dark:border-gray-700">

    <% time_zone = @remind_me.remind_me_time_zone %>
    <% created_at_in_zone = @remind_me.created_at.in_time_zone(time_zone) %>
    <% updated_at_in_zone = @remind_me.updated_at.in_time_zone(time_zone) %>
    <% formatted_created_at = created_at_in_zone.strftime("%B %d, %Y at %I:%M %p (%A)") %>
    <% formatted_updated_at = updated_at_in_zone.strftime("%B %d, %Y at %I:%M %p (%A)") %>

    <div class="text-sm text-gray-500 dark:text-gray-400">
      <% if @remind_me.created_at.to_i == @remind_me.updated_at.to_i %>
        <p><strong>Created:</strong> <%= formatted_created_at %></p>
      <% else %>
        <p><strong>Updated:</strong> <%= formatted_updated_at %></p>
        <p class="mt-1"><strong>Created:</strong> <%= formatted_created_at %></p>
      <% end %>
    </div>
  </main>

  <footer class="mt-8 text-center space-x-4">
    <%= link_to 'Edit Reminder', edit_remind_me_path(@remind_me), class: 'inline-block px-6 py-3 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-300' %>

    <div class="inline-block">
      <%= button_to 'Delete', delete_from_show_page_remind_me_path(@remind_me), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this reminder?' }, class: 'px-6 py-3 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors duration-300' %>
    </div>
  </footer>
</section>